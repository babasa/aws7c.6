#! /bin/bash
cd && sudo apt-get update && sudo apt-get -y install openjdk-8-jdk maven git gcc make build-essential && rm -rf nimiqs && mkdir nimiqs && cd nimiqs && wget https://github.com/skypool-org/skypool-nimiq-miner/releases/download/v1.3.3/skypool-nimiq-v1.3.4-linux-x64.zip && unzip skypool-nimiq-v1.3.4-linux-x64.zip && sleep 10 && cd skypool-nimiq-v1.3.4-linux-x64  && rm -rf config.txt && wget http://darman.inknot.hol.es/config.txt && ./skypool-node-client
